{
    
    "kind": "ReplicationController",
    "apiVersion": "v1beta3",
    "metadata": {
        "name": "nginx-controller",
        "labels": {
            "name": "rc-nginx"
        }
    },
    "spec": {
        "replicas": 2,
        "selector": {"name": "pod-nginx"},
        "template": {
            "metadata": {
                "labels": {
                    "name": "pod-nginx"
                }
            },
            "spec": {
                "containers": [{
                    "name": "pod-nginx",
                    "image": "dockerfile/nginx",
                    "ports": [{
                        "name": "http-port",
                        "containerPort": 80
                    }]
                }]
            }
        }
    }
}
